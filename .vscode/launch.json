{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node inspect",
            "request": "launch",
            "type": "node",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceRoot}/node_modules/**"
            ],
            "cwd": "${workspaceRoot}",
            "program": "${file}",
            "runtimeArgs": [
               "-r", "ts-node/register",
               "-r", "tsconfig-paths/register"
            ],
        }
    ]
}